@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h2 class="text-center">Register</h2>
    <hr>
    <form asp-action="Register" asp-controller="Home" method="POST">
        <div class="form-group">
            <label asp-for="FirstName" class="col-4"></label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <input asp-for="FirstName" class="form-control col-6">
        </div>
        <div class="form-group">
                <label asp-for="LastName" class="col-4"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
                <input asp-for="LastName" class="form-control col-6">
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-4"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email" class="form-control col-6">
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-4"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="Password" class="form-control col-6">
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-4"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <input asp-for="ConfirmPassword" class="form-control col-6">
            </div>
            <div class="button">
                <input type="submit" class="btn btn-secondary" value="Register">
            </div>
    </form>
</body>
</html>